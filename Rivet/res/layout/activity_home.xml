<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/initial_color"
    tools:context="com.rivet.app.HomeActivity" >

    <FrameLayout
        android:id="@+id/leftChildFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/child3Rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/customize_background" >

                <ImageButton
                    android:id="@+id/accountUpperArrow_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/arrow_right"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/accountSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/accountUpperArrow_first"
                    android:layout_toRightOf="@+id/accountUpperArrow_first"
                    android:text="@string/account_settings"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/child1RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/arrow_rightIB_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/icon_disclosure" />

                <TextView
                    android:id="@+id/loginTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/arrow_rightIB_second"
                    android:layout_toRightOf="@+id/arrow_rightIB_second"
                    android:text="@string/login"
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:id="@+id/arrowIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/childLoginSectionRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageButton
                    android:id="@+id/arrow_rightIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/icon_disclosure"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/emailIDTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/arrow_rightIB"
                    android:layout_toRightOf="@+id/arrow_rightIB"
                    android:text="@string/my_email_id"
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:id="@+id/arrowIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/emailIDTV"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/dividerIV"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider"
                android:contentDescription="@string/content"
                android:focusable="false"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/childLogoutSectionRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageButton
                    android:id="@+id/arrow_rightIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/icon_disclosure" />

                <TextView
                    android:id="@+id/logOutTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/arrow_rightIB"
                    android:text="@string/log_out"
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:id="@+id/arrowIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/logOutTV"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/child2RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/customize_background" >

                <TextView
                    android:id="@+id/categoriesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/checkUpperIB"
                    android:text="@string/customize"
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:id="@+id/checkUpperIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/login_content"
                    android:focusable="false"
                    android:src="@drawable/arrow_right"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ListView
                android:id="@+id/customizeLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider"
                android:focusable="false" >
            </ListView>
        </LinearLayout>

        <ImageButton
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/shadow"
            android:contentDescription="@string/content" >
        </ImageButton>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/mainchildRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/rl_top_bar"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#DFDFDF" >

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content"
                android:focusable="false"
                android:padding="12dp"
                android:src="@drawable/tab_menu" />

            <TextView
                android:id="@+id/tv_buffering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/buffering_"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:contentDescription="@string/content"
                android:focusable="false"
                android:src="@drawable/logo_home" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/storyProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@+id/rl_top_bar"
            android:progressDrawable="@drawable/initial_story_bar" />

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storyProgressBar"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_category"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_uploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_title"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_producer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_uploaded"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/animateloader_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content"
                android:focusable="false"
                android:padding="12dp"
                android:visibility="invisible" >
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/adsIV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_controls"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_controls"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rl_info"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ib_play_pause"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="0.7dp"
                    android:layout_marginRight="0.7dp"
                    android:layout_weight="1"
                    android:background="@color/player_controls_color"
                    android:contentDescription="@string/content"
                    android:focusable="false"
                    android:src="@drawable/button_play" />

                <ImageButton
                    android:id="@+id/ib_rewind"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0.7dp"
                    android:layout_marginStart="0.7dp"
                    android:layout_weight="1"
                    android:background="@color/player_controls_color"
                    android:contentDescription="@string/content"
                    android:focusable="false"
                    android:src="@drawable/button_rewind" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.4dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ib_next"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="0.7dp"
                    android:layout_marginRight="0.7dp"
                    android:layout_weight="1"
                    android:background="@color/player_controls_color"
                    android:contentDescription="@string/content"
                    android:focusable="false"
                    android:src="@drawable/button_skip" />

                <ImageButton
                    android:id="@+id/ib_bookmark"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0.7dp"
                    android:layout_marginStart="0.7dp"
                    android:layout_weight="1"
                    android:background="@color/player_controls_color"
                    android:contentDescription="@string/content"
                    android:focusable="false"
                    android:src="@drawable/button_share" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_right_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/white"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/activity_about_rivet" />
        </LinearLayout>

        <ImageButton
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/shadow_right"
            android:contentDescription="@string/content" >
        </ImageButton>
    </FrameLayout>

</RelativeLayout>