<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headertwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/customize_background" >

        <Button
            android:id="@+id/facebookCancelBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@color/customize_background"
            android:text="Cancel"
            android:textColor="@color/topNewsColor" />

        <TextView
            android:id="@+id/facebookTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Facebook"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnUpdateFacebookStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/customize_background"
            android:text="Post"
            android:textColor="@color/topNewsColor" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/customize_background" >

        <Button
            android:id="@+id/TOTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/customize_background"
            android:text="TO:" />

        <Spinner
            android:id="@+id/publicSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/TOTV"
            android:background="@color/customize_background"
            android:textColor="@color/topNewsColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text=">"
            android:textColor="@color/topNewsColor"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/userMessageET"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:hint="say something about this..." />

    <LinearLayout
        android:id="@+id/childLL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/bordor"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iconStory"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_home" />

        <RelativeLayout
            android:id="@+id/titleLLChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblFacebookUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/rivetRadioTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:text="@string/rivet_radio" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>